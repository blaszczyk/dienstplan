<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="muettinghoven.dienstplan.app.view.DienstDetailActivity">

    <TextView
        android:id="@+id/dienstBeschreigungTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DienstBeschreibung"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dienstNameTextView"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/dienstNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DienstName"
        android:textSize="26sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/zeitraumTextView" />

    <TextView
        android:id="@+id/bewohnerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BewohnerName"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/zeitraumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZeitraumName"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/bewohnerNameTextView"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/kommentarEditText"
        android:layout_width="291dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="kommentar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dienstBeschreigungTextView"
        app:layout_constraintVertical_bias="0.111" />

</android.support.constraint.ConstraintLayout>
